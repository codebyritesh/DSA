class Solution {
    public int diagonalSum(int[][] mat) {
        int sum=0;
        // O(n^2)
        // for(int i=0; i<mat.length; i++){
        //     for(int j=0; j<mat[0].length; j++){
        //         if(i==j)
        //             sum+=mat[i][j];
        //         else if(i+j==mat.length-1)
        //             sum+=mat[i][j];
        //     }
        // }

        // O(n)
        for(int i=0; i<mat.length; i++){
            // primary dialgonal
            sum+=mat[i][i];
            // condition to not include same elemen
            if(i!=mat.length-1-i)
                // secondary diagonal without use of jth array
                sum+=mat[i][mat.length-1-i];
        }

        return sum;
    }
}
